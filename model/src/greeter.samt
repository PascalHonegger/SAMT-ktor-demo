package tools.samt.greeter

record Greeting {
    message: String (*..128)
}

record Complex {
    name: String
    age: Int (1..*)
}

enum GreetingType {
    HELLO,
    HI,
    HEY
}

service Greeter {
    greet(name: String (1..50),
          binary: Bytes?,
          type: GreetingType?,
          anotherString: String?,
          inBody: Complex?
    ): Greeting
    greetAll(names: List<String (1..50)>): List<Greeting>
    greeting(name: String (2..10)): String (1..100)
}
